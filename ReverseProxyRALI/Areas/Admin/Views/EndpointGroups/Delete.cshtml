@model FGate.Data.Entities.EndpointGroup
@{
    ViewData["Title"] = "Eliminar Grupo";
}

 

<h3 class="text-danger">¿Estás seguro de que quieres eliminar este grupo?</h3>
<div>
    <h4>Grupo de Endpoints</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.GroupName)</dd>
        <dt class="col-sm-2">Patrón de Ruta</dt>
        <dd class="col-sm-10"><code>@Html.DisplayFor(model => model.PathPattern)</code></dd>
    </dl>
    
    <form asp-action="Delete">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="GroupId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la Lista</a>
    </form>
</div>