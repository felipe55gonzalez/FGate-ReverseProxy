@model FGate.Areas.Admin.Models.EndpointGroupViewModel
@{
    ViewData["Title"] = "Editar Grupo de Endpoints";
}

 
<h4>Grupo: @Model.GroupName</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GroupId" />
            
            <div class="mb-3">
                <label asp-for="GroupName" class="form-label"></label>
                <input asp-for="GroupName" class="form-control" />
                <span asp-validation-for="GroupName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="2"></textarea>
            </div>
            <div class="mb-3">
                <label asp-for="PathPattern" class="form-label"></label>
                <input asp-for="PathPattern" class="form-control" />
                <span asp-validation-for="PathPattern" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="MatchOrder" class="form-label"></label>
                    <input asp-for="MatchOrder" class="form-control" type="number" />
                </div>
                <div class="col-md-6 mb-3 d-flex align-items-center">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="ReqToken" />
                        <label class="form-check-label" asp-for="ReqToken"></label>
                    </div>
                </div>
                <div class="col-md-6 mb-3 d-flex align-items-center">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" asp-for="IsInMaintenanceMode">
                        <label class="form-check-label" asp-for="IsInMaintenanceMode"></label>
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="RateLimitRuleId" class="form-label"></label>
                    <select asp-for="RateLimitRuleId" class="form-select" asp-items="@ViewBag.RateLimitRuleId">
                        <option value="">-- Sin Límite --</option>
                    </select>
                    <hr />
                    <h4>Reglas WAF Asignadas</h4>
                    <div class="mb-3">
                        @for (int i = 0; i < Model.WafRuleAssignments.Count; i++)
                        {
                            <div class="form-check">
                                <input type="hidden" asp-for="WafRuleAssignments[i].RuleId" />
                                <input type="hidden" asp-for="WafRuleAssignments[i].RuleName" />
                                <input type="hidden" asp-for="WafRuleAssignments[i].Description" />
                                <input class="form-check-input" type="checkbox" asp-for="WafRuleAssignments[i].IsAssigned" />
                                <label class="form-check-label" asp-for="WafRuleAssignments[i].IsAssigned">
                                    <strong>@Model.WafRuleAssignments[i].RuleName</strong>
                                    <small class="text-muted d-block">@Model.WafRuleAssignments[i].Description</small>
                                </label>
                            </div>
                        }
                    </div>
                    <hr />
                </div>
            </div>
            
            <hr/>
            <h4>Destinos Backend Disponibles</h4>
            <div class="mb-3">
                @for (int i = 0; i < Model.Destinations.Count; i++)
                {
                    <div class="form-check">
                        <input type="hidden" asp-for="Destinations[i].DestinationId" />
                        <input type="hidden" asp-for="Destinations[i].Address" />
                        <input type="hidden" asp-for="Destinations[i].FriendlyName" />
                        <input class="form-check-input" type="checkbox" asp-for="Destinations[i].IsAssigned" />
                        <label class="form-check-label" asp-for="Destinations[i].IsAssigned">
                            <strong>@Model.Destinations[i].FriendlyName</strong> (<code>@Model.Destinations[i].Address</code>)
                        </label>
                    </div>
                }
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>