@model IEnumerable<FGate.Data.Entities.EndpointGroup>
@{
    ViewData["Title"] = "Grupos de Endpoints";
}

<div class="d-flex justify-content-between align-items-center mb-3">
     
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Crear Nuevo Grupo</a>
</div>

<div class="mb-3">
    <form asp-action="Index" method="get">
        <div class="input-group">
            <input type="text" name="searchString" class="form-control" placeholder="Buscar por nombre o patrón de ruta..." value="@ViewData["CurrentFilter"]">
            <button class="btn btn-outline-secondary" type="submit"><i class="bi bi-search"></i> Buscar</button>
            <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-x"></i> Limpiar</a>
        </div>
    </form>
</div>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Nombre del Grupo</th>
            <th>Patrón de Ruta</th>
            <th>Orden</th>
            <th>Req. Token</th>
            <th>Estado</th>
            <th>Destinos</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <strong>@Html.DisplayFor(modelItem => item.GroupName)</strong><br>
                <small class="text-muted">@Html.DisplayFor(modelItem => item.Description)</small>
            </td>
            <td><code>@Html.DisplayFor(modelItem => item.PathPattern)</code></td>
            <td>@Html.DisplayFor(modelItem => item.MatchOrder)</td>
            <td>
                @if (item.ReqToken)
                {
                    <span class="badge bg-info">Sí</span>
                }
                else
                {
                    <span class="badge bg-secondary">No</span>
                }
            </td>
            <td>
                @if (item.IsInMaintenanceMode)
                {
                    <span class="badge bg-warning text-dark"><i class="bi bi-cone-striped"></i> Mantenimiento</span>
                }
                else
                {
                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Activo</span>
                }
            </td>
            <td>
                @if (item.EndpointGroupDestinations.Any())
                {
                    <ul class="list-unstyled mb-0">
                        @foreach (var dest in item.EndpointGroupDestinations)
                        {
                            <li><span class="badge bg-light text-dark">@dest.Destination.FriendlyName</span></li>
                        }
                    </ul>
                }
                else
                {
                    <span class="text-muted">Sin destinos</span>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GroupId" class="btn btn-sm btn-secondary"><i class="bi bi-pencil-square"></i> Editar</a>
                <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal"
                        data-action-url="@Url.Action("Delete", "EndpointGroups", new { id = item.GroupId })">
                    <i class="bi bi-trash"></i> Eliminar
                </button>
            </td>
        </tr>
}
    </tbody>
</table>