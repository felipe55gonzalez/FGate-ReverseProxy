@model IEnumerable<FGate.Data.Entities.RateLimitRule>
@{
    ViewData["Title"] = "Reglas de Límite de Tasa";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Crear Nueva Regla</a>
</div>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Nombre de la Regla</th>
            <th>Límite de Peticiones</th>
            <th>Periodo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.RuleName</td>
                <td>@item.RequestLimit</td>
                <td>@item.PeriodSeconds segundos</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.RuleId" class="btn btn-sm btn-secondary">Editar</a>
                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal"
                            data-action-url="@Url.Action("Delete", new { id = item.RuleId })">
                        Eliminar
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>