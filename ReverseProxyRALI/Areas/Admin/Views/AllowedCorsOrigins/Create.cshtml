@model FGate.Data.Entities.AllowedCorsOrigin
@{
    ViewData["Title"] = "Añadir Origen CORS";
}

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="OriginUrl" class="form-label"></label>
                <input asp-for="OriginUrl" class="form-control" placeholder="https://mi-frontend.com" />
                <span asp-validation-for="OriginUrl" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">
                <input class="form-check-input" asp-for="IsEnabled" />
                <label class="form-check-label" asp-for="IsEnabled"></label>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>