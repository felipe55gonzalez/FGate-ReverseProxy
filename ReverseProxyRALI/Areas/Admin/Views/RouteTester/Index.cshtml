@model RouteTesterViewModel
@{
    ViewData["Title"] = "Probador de Rutas";
}

<h1><i class="bi bi-signpost-split"></i> @ViewData["Title"]</h1>
<p class="text-muted">Ingresa una ruta para verificar cómo la procesará y clasificará el proxy.</p>
<hr />

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Probar una Ruta</h5>
                <form asp-action="Index" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label asp-for="RequestPath" class="form-label"></label>
                        <input asp-for="RequestPath" class="form-control" />
                        <span asp-validation-for="RequestPath" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Probar
                    </button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        @if (Model.HasResult)
        {
            <div class="card shadow-sm">
                <div class="card-header">
                    Resultado del Análisis
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-warning">@Model.ErrorMessage</div>
                    }
                    else
                    {
                        <dl class="row">
                            <dt class="col-sm-5">Grupo Coincidente</dt>
                            <dd class="col-sm-7"><span class="badge bg-primary fs-6">@Model.MatchedGroupName</span></dd>

                            <dt class="col-sm-5">Patrón de Ruta</dt>
                            <dd class="col-sm-7"><code>@Model.MatchedPathPattern</code></dd>

                            <dt class="col-sm-5">¿Requiere Token?</dt>
                            <dd class="col-sm-7">
                                @if (Model.RequiresToken)
                                {
                                    <span class="badge bg-success">Sí</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No</span>
                                }
                            </dd>
                        </dl>
                    }
                </div>
            </div>
        }
    </div>
</div>